<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@id/horoperso_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">

        <ImageView
            android:id="@id/horoperso_back"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:paddingTop="13.0dip"
            android:paddingRight="13.0dip"
            android:paddingBottom="15.0dip"
            android:src="@drawable/back_white" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/menu_item_21_txt"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="21.0sp" />

        <ImageView
            android:id="@id/horoperso_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:paddingLeft="5.0dip"
            android:paddingTop="10.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="10.0dip"
            android:src="@drawable/font_size" />
    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@id/sliding_tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/horoperso_top_bar"
        android:layout_gravity="left"
        android:background="@color/colorPrimary"
        app:layout_scrollFlags="noScroll"
        app:tabGravity="fill"
        app:tabMode="fixed" />

    <androidx.viewpager.widget.ViewPager
        android:id="@id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/sliding_tabs"
        android:visibility="visible"
        android:background="@color/transparent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

