<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_signe"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@id/wims_back"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_marginTop="28.0dip"
        android:paddingTop="13.0dip"
        android:paddingBottom="15.0dip"
        android:src="@drawable/back_white"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@id/wims_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/wims_dob_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wims_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/wims_interr"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/chsign_p2_txt"
            android:textColor="@android:color/white"
            android:textSize="24.0sp" />

        <ImageView
            android:id="@id/wims_interr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:adjustViewBounds="true"
            android:scaleX="0.45"
            android:scaleY="0.45"
            android:src="@drawable/interrog" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/wims_dob_layout"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@id/wims_title_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:background="@drawable/bg_layout_ok"
        app:layout_constraintBottom_toTopOf="@+id/wims_hob_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@id/wims_dob"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:hint="@string/champ_dob"
            android:inputType="date" />

        <ImageView
            android:id="@id/wims_dob_valid"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.0dip"
            android:focusable="false"
            android:src="@drawable/edittext_validated"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/wims_hob_layout"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@id/wims_dob_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_layout_ok"
        app:layout_constraintBottom_toTopOf="@+id/wims_hob_unknown_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@id/wims_hob"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:hint="@string/champ_heurnaiss"
            android:inputType="time" />

        <ImageView
            android:id="@id/wims_hob_valid"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12.0dip"
            android:layout_marginRight="12.0dip"
            android:focusable="false"
            android:src="@drawable/edittext_validated"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/wims_hob_unknown_layout"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_below="@id/wims_hob_layout"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wims_back">

        <CheckBox
            android:id="@id/wims_hob_unknown_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_checkbox_choice_sign"
            android:checked="false"
            android:scaleX="0.38"
            android:scaleY="0.4" />

        <TextView
            android:id="@id/wims_hob_unknown_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:layout_toRightOf="@id/wims_hob_unknown_checkbox"
            android:text="@string/case_heurinc"
            android:textColor="@android:color/white"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/wims_cob_layout"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@id/wims_hob_unknown_layout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_layout_ok"
        app:layout_constraintBottom_toTopOf="@+id/wims_validate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wims_hob_unknown_layout">

        <EditText
            android:id="@id/wims_cob"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:hint="@string/champ_lieunaiss"
            android:inputType="text" />

        <ImageView
            android:id="@id/wims_cob_valid"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12.0dip"
            android:focusable="false"
            android:src="@drawable/edittext_bug"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/wims_validate"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@id/wims_cob_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:background="@drawable/rounded_button_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/chsign_p1_cta"
            android:textColor="@android:color/white"
            android:textSize="21.0sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>